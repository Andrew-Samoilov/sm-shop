{
  "name": "sm-shop",
  "version": "0.8.4",
  "private": true,
  "scripts": {
    "dev": "( taskkill /F /IM ssh.exe || echo ssh не працює ) && ssh -fN -L 5433:localhost:5432 sms && echo Тунель відкрито && next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "db": "ssh -fN -L 5433:localhost:5432 sms",
    "db:stop": "taskkill /F /IM ssh.exe",
    "db:dump_old": "bash -c 'pg_dump -U smshopuser -h localhost -d smshopdb -Fc -f ./backups/smshopdb-$(date +%d-%m-%Y_%H-%M-%S).dump'",
    "db:dump": "bash -c 'pg_dump -U smshopuser -h localhost -p 5433 -d smshopdb -Fc -f ./backups/smshopdb-$(date +%d-%m-%Y_%H-%M-%S).dump'",
    "test": "playwright test",
    "lint": "next lint",
    "format": "prettier --write . && eslint . --fix"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.9.0",
    "dotenv": "^16.4.7",
    "embla-carousel-autoplay": "^8.5.2",
    "embla-carousel-react": "^8.5.2",
    "image-size": "^2.0.2",
    "next": "^15.3.3",
    "nodemailer": "^6.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-google-recaptcha": "^3.1.0",
    "react-markdown": "^10.0.0",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.51.1",
    "@tailwindcss/postcss": "^4.1.3",
    "@types/node": "^22.14.1",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "eslint": "^9.24.0",
    "eslint-config-next": "^15.2.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.9.0",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.8.3"
  }
}